# Irys MCP 환경변수 설정

# Irys 개인키 (필수)
# Arweave 지갑의 개인키를 입력하세요
IRYS_PRIVATE_KEY=your-private-key-here

# Irys 게이트웨이 URL (선택사항)
# 기본값: https://node2.irys.xyz
IRYS_GATEWAY_URL=https://node2.irys.xyz

# 로그 레벨 (선택사항)
# debug, info, warn, error
LOG_LEVEL=info

# 최대 파일 크기 (바이트) (선택사항)
# 기본값: 100MB
MAX_FILE_SIZE=104857600

# 허용된 파일 타입 (선택사항)
# 쉼표로 구분된 MIME 타입 목록
ALLOWED_FILE_TYPES=text/plain,image/jpeg,image/png,application/pdf,application/json

# 연결 타임아웃 (밀리초) (선택사항)
# 기본값: 30000 (30초)
CONNECTION_TIMEOUT=30000

# 업로드 타임아웃 (밀리초) (선택사항)
# 기본값: 300000 (5분)
UPLOAD_TIMEOUT=300000 