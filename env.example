# Irys MCP 서버 환경 변수 설정

# Irys L1 개인키 (64자 hex 형식)
# 예: 1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
IRYS_PRIVATE_KEY=your-private-key-here

# Irys L1 네트워크 타입 (mainnet 또는 testnet)
# 기본값: mainnet
IRYS_NETWORK=mainnet

# Irys L1 RPC URL (선택사항 - 네트워크 타입에 따라 자동 설정됨)
# 메인넷: https://uploader.irys.xyz
# 테스트넷: https://testnet-rpc.irys.xyz/v1
IRYS_GATEWAY_URL=https://uploader.irys.xyz

# 로그 레벨 (선택사항)
# debug, info, warn, error
LOG_LEVEL=info

# 최대 파일 크기 (바이트) (선택사항)
# 기본값: 100MB
MAX_FILE_SIZE=104857600

# 허용된 파일 타입 (선택사항)
# 쉼표로 구분된 MIME 타입 목록
ALLOWED_FILE_TYPES=text/plain,image/jpeg,image/png,application/pdf,application/json

# 연결 타임아웃 (밀리초) (선택사항)
# 기본값: 30000 (30초)
CONNECTION_TIMEOUT=30000

# 업로드 타임아웃 (밀리초) (선택사항)
# 기본값: 300000 (5분)
UPLOAD_TIMEOUT=300000 